{
  "name": "elegant-dashboard-chrome-extension",
  "version": "1.0.0",
  "description": "A beautiful, modern Chrome extension that transforms your new tab page into an elegant dashboard with customizable widgets",
  "main": "newtab.html",
  "scripts": {
    "build": "echo 'Extension is ready for Chrome Web Store submission'",
    "dev": "echo 'Load extension in Chrome Developer Mode'",
    "test": "echo 'Test extension functionality manually'"
  },
  "keywords": [
    "chrome-extension",
    "new-tab",
    "dashboard",
    "productivity",
    "glassmorphism",
    "widgets",
    "todo",
    "calendar",
    "time",
    "weather"
  ],
  "author": "Elegant Dashboard Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/elegant-dashboard-chrome-extension.git"
  },
  "bugs": {
    "url": "https://github.com/yourusername/elegant-dashboard-chrome-extension/issues"
  },
  "homepage": "https://github.com/yourusername/elegant-dashboard-chrome-extension#readme",
  "engines": {
    "node": ">=14.0.0"
  },
  "devDependencies": {},
  "dependencies": {},
  "manifest": {
    "version": 3,
    "permissions": [
      "storage",
      "tabs"
    ],
    "chrome_url_overrides": {
      "newtab": "newtab.html"
    }
  },
  "browserslist": [
    "Chrome >= 88",
    "Edge >= 88"
  ]
}

