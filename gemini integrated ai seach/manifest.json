{
  "manifest_version": 3,
  "name": "Gemini Insight",
  "version": "1.0.0",
  "description": "AI-powered screen overlay extension using Gemini API to solve on-screen questions",
  "permissions": [
    "activeTab",
    "scripting",
    "storage",
    "identity",
    "tabs"
  ],
  "host_permissions": [
    "https://generativelanguage.googleapis.com/*",
    "https://accounts.google.com/*"
  ],
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "Gemini Insight"
  },
  "web_accessible_resources": [
    {
      "resources": ["overlay.html", "overlay.js", "overlay.css"],
      "matches": ["<all_urls>"]
    }
  ],
  "commands": {
    "activate-overlay": {
      "suggested_key": {
        "default": "Alt+Q",
        "mac": "Alt+Q"
      },
      "description": "Activate Gemini overlay"
    }
  }
}
